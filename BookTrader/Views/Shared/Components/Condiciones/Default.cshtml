@model IEnumerable<BookTrader.Models.Condiciones>


@{
    var esDropdown = ViewData["Dropdown"] as bool? ?? false;
}

@if (esDropdown)
{
    <ul class="dropdown-menu">
        @foreach (var condiciones in Model)
        {
            <li>
                <a class="dropdown-item" href="#" onclick="filtrarCategoria('@condiciones.Id')">
                    @condiciones.Nombre
                </a>
            </li>
        }
    </ul>
}
else
{
    <option selected>Seleccione una condicion</option>
    @foreach (var condicion in Model)
    {
        <option value="@condicion.Id">@condicion.Nombre</option>
    }
}

