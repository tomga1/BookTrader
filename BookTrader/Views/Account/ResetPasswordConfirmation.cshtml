@{
    ViewData["Title"] = "Restablecimiento exitoso";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";

}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h2 class="mb-0">¡Contraseña restablecida!</h2>
                </div>
                <div class="card-body">
                    <p class="text-muted">
                        Tu contraseña ha sido restablecida exitosamente. Ya podés iniciar sesión con tu nueva contraseña.
                    </p>
                    <a asp-controller="Account" asp-action="Login" class="btn btn-primary">
                        Ir a iniciar sesión
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
