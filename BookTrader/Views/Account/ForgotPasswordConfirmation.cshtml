@{
    ViewData["Title"] = "Confirmación de restablecimiento de contraseña";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="alert alert-info" role="alert">
                Si el correo que ingresaste está asociado a una cuenta,
                te enviamos un email con instrucciones para restablecer tu contraseña.
            </div>
            <a asp-controller="Account" asp-action="Login" class="btn btn-primary">
                Volver al inicio de sesión
            </a>
        </div>
    </div>
</div>
