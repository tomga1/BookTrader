@model BookTrader.Models.PaginacionViewModel<BookTrader.Models.Libros>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">BookTrader</h1>
</div>
    

<div class="container-fluid">
    <div class="row">

        <aside class="col-2 bg-light p-3 border-end" style="min-height: 100vh;">
            <div class="accordion" id="filtrosCategorias">
                <h3>Categorias</h3>
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingGeneral">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseGeneral">
                            General
                        </button>
                    </h2>
                    <div id="collapseGeneral" class="accordion-collapse collapse" data-bs-parent="#filtrosCategorias">
                        <div class="accordion-body">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="Desarrollo personal" id="desarrolloPersonal">
                                <label class="form-check-label" for="desarrolloPersonal">Desarrollo personal</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="Finanzas" id="finanzas">
                                <label class="form-check-label" for="finanzas">Finanzas</label>
                            </div>
                            <!-- Más subcategorías -->
                        </div>
                    </div>
                </div>

                <!-- Repetir para otras categorías -->
            </div>
        </aside>

        @foreach (var libro in Model.Items)
        {
            <div class="col-md-3 mb-4">
                <div class="card" style="width: 18rem;">
                    <img src="@libro.ImagenUrl" class="card-img-top img-fija" alt="@libro.Nombre">
                    <div class="card-body">
                        <h5 class="card-title">@libro.Nombre</h5>
                        <p class="card-text">@libro.Autor</p>
                        <p class="card-text"><strong>Editorial:</strong> @libro.Editorial</p>
                        <p class="card-text"><strong>Precio:</strong> $@libro.Precio</p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><strong>Categoría:</strong> @libro.Categoria?.Nombre</li>
                        <li class="list-group-item"><strong>Estado:</strong> @libro.Condicion?.Nombre</li>
                    </ul>
                    <div class="card-body">
                        <a href="#" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#modalLibro_@libro.Id">Más Info</a>
                        <a href="#" class="btn btn-success ">Lo quiero!</a>

                    </div>
                </div>
            </div>

            <!-- MODAL -->
            <div class="modal fade" id="modalLibro_@libro.Id" tabindex="-1" aria-labelledby="modalLabel_@libro.Id" aria-hidden="true">
                <div class="modal-dialog modal-dialog-scrollable">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="modalLabel_@libro.Id">@libro.Nombre </h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                        </div>
                        <div class="modal-body">
                            <p><strong>Autor:</strong> @libro.Autor</p>
                            <p><strong>Editorial:</strong> @libro.Editorial</p>
                            <p><strong>ISBN:</strong> @libro.ISBN</p>
                            <p><strong>Idioma:</strong> @libro.Idioma?.Nombre</p>
                            <p><strong>Páginas:</strong> @libro.cantPaginas</p>
                            <p><strong>Estado del libro:</strong> @libro.Condicion?.Nombre</p>
                            <p><strong>Descripción:</strong><br /> @libro.Descripcion</p>
                            <p><strong>Reseña:</strong><br /> @libro.MasInfo</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                        </div>
                    </div>
                </div>
            </div>

        }

        <div class="d-flex justify-content-center mt-4">
            <nav>
                <ul class="pagination">
                    @if (Model.TienePaginaAnterior)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-route-pagina="@(Model.PaginaActual - 1)" asp-route-searchString="@ViewData["SearchString"]">Anterior</a>
                        </li>
                    }

                    @for (int i = 1; i <= Model.TotalPaginas; i++)
                    {
                        <li class="page-item @(i == Model.PaginaActual ? "active" : "")">
                            <a class="page-link" asp-route-pagina="@i" asp-route-searchString="@ViewData["SearchString"]">@i</a>
                        </li>
                    }

                    @if (Model.TienePaginaSiguiente)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-route-pagina="@(Model.PaginaActual + 1)" asp-route-searchString="@ViewData["SearchString"]">Siguiente</a>
                        </li>
                    }
                </ul>
            </nav>
        </div>


    </div>

    

    
</div>